@model Database.Models.Glass

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Glass", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Glass</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Maker)
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Maker, "", new { @class = "text-danger" })

                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem { Text = "Sia", Value = "Sia" });
                    listItems.Add(new SelectListItem { Text = "Triumf", Value = "Triumf" });
                    listItems.Add(new SelectListItem { Text = "GB", Value = "GB" });
                    listItems.Add(new SelectListItem { Text = "Diplom-Is", Value = "Diplom-Is" });
                 }

                @Html.DropDownListFor(model => model.Maker, listItems, "-- Välj --")
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Picture)
            <div class="col-md-10">
                <input type="file" name="imageFile" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tasted)
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Tasted)
                    @Html.ValidationMessageFor(model => model.Tasted, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
